    "version": "0.2.0",
    "configurations": [
    
        {
            "type": "node",
            "request": "launch",
            "name": "Launch syncsecrets",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "outputCapture": "std",
            "console": "integratedTerminal",
            "program": "${workspaceFolder}/bin/m1client.js",
            "args": ["syncsecrets"]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch synclogs",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "outputCapture": "std",
            "console": "integratedTerminal",
            "program": "${workspaceFolder}/bin/m1client.js",
            "args": ["synclogs"]
        }, 
        {
            "type": "node",
            "request": "launch",
            "name": "Launch update",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "outputCapture": "std",
            "console": "integratedTerminal",
            "program": "${workspaceFolder}/bin/m1client.js",
            "args": ["update", "-f"]
        }, 
        {
            "type": "node",
            "request": "launch",
            "name": "Launch dbbackup",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "outputCapture": "std",
            "console": "integratedTerminal",
            "program": "${workspaceFolder}/bin/m1client.js",
            "args": ["backupdb"]
        }
    ]
}
